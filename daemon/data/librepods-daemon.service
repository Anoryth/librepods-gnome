[Unit]
Description=LibrePods AirPods Daemon
Documentation=https://github.com/Anoryth/librepods-gnome
After=bluetooth.target

[Service]
Type=dbus
BusName=org.librepods.Daemon
ExecStart=/usr/local/bin/librepods-daemon
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.config/librepods
PrivateTmp=true

[Install]
WantedBy=default.target
